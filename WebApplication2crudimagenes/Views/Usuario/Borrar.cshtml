@model Usuarios

@{
    ViewData["title"] = "Borrar Usuario";
}

<div class="pagetitle">
    <h1>Usuarios</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Eliminacion de Usuarios</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<h4 class="mb-3">Estas seguro de borrar el Usuario: @Model.nombre @Model.apellidos ?</h4>

<form asp-action="BorrarUsuario" asp-controller="Usuario">
    <input type="hidden" asp-for="id" />
    <button class="btn btn-danger" type="submit">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>


