@model Categorias

@{
    ViewData["title"] = "Creacion de Categorias";
}

<div class="pagetitle">
    <h1>Categorias</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a>Home</a></li>
            <li class="breadcrumb-item active">Creacion de Categorias</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<br />
<form asp-action="Crear" asp-controller="Categorias" class="row g-3">

    <div asp-validation-summary="ModelOnly"></div>

    <div class="col-md-6">
        <label asp-for="nombre" class="form-label"></label>
        <input class="form-control" name="nombre" id="nombre" asp-for="nombre" placeholder="Escribe el nombre de la categoria"/>
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>

    <div class="col-md-12">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>

</form>

